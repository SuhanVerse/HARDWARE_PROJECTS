const int touchPin = 2;   // sensor I/O pin
int frame = 0;
unsigned long lastFrameTime = 0;

int textIndex = 0;
const char* messages[] = {
  "Galij Mama",
  "Negron James",
  "Asim Scientist",
  "Dhami Ji"
};
const int messageCount = sizeof(messages) / sizeof(messages[0]);

bool lastState = LOW;

void setup() {
  pinMode(touchPin, INPUT);
  display.begin(SSD1306_SWITCHCAPVCC, SCREEN_I2C_ADDR);
  display.clearDisplay();
}

void loop() {
  bool currentState = digitalRead(touchPin);

  if (currentState == LOW) {
    // Animation mode
    unsigned long now = millis();
    if (now - lastFrameTime >= FRAME_DELAY) {
      lastFrameTime = now;
      display.clearDisplay();
      display.drawBitmap(40, 8, frames[frame], FRAME_WIDTH, FRAME_HEIGHT, 1);
      display.display();
      frame = (frame + 1) % FRAME_COUNT;
    }
  } else {
    // On rising edge: cycle to next text
    if (lastState == LOW && currentState == HIGH) {
      textIndex = (textIndex + 1) % messageCount;
      display.clearDisplay();
      display.setTextSize(2);
      display.setTextColor(WHITE);
      display.setCursor(0, 20);
      display.println(messages[textIndex]);
      display.display();
    }
  }

  lastState = currentState;
}
